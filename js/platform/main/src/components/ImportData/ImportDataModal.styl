.dropzone-container
  display: flex
  flex-direction: column
  height: 100%

  .dropzone-section
    height: 100%

    .dropzone-dragarea
      height: 100%
      margin: 0 20px 20px 20px
      background-color: #F5F5F5
      border: 1px solid #EAEAEA
      border-radius: 5px
      display: flex
      justify-content: center

      .subtitle
        display: flex
        flex-direction: column
        justify-content: center

  .browse-container
    display: flex
    align-items: center
    justify-content: center