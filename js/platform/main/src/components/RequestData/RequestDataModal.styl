.requestData
    margin-bottom: 30px

    #providerEmail
        width: 100%

    .messageContainer
        margin-top: 10px

        span
            color: #c8c8c8
            font-size: 12px

        .messageToProvider
            display: flex
            flex-direction: column
            border: 1px solid black

            .message textarea
                width: 100%
                height: 150px
                padding: 10px
                resize: none
                border: none
                margin: 0

            .messageActions
                display: flex
                align-items: center
                justify-content: flex-end
                height: 35px
                margin-right: 10px

                .editMessage
                    color: #c8c8c8
                    display: flex
                    align-items: center
                    margin-right: 15px

                .useDefault a
                    color: #c8c8c8

    .sendRequest
        margin: 10px 0

    .actionBtn
        width: 100%
        height: 34px
        border-radius: 0
        border: 1px solid #000
        background-color: #fff
        display: block
        font-weight: normal